---
import Container from "@components/container.astro";
import Dropdown from "./dropdown.astro";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";
import UcmLogoSm from "assets/ucmSmall.png";
import { Picture } from "astro:assets";

const menuitems = [
  {
    title: "Products & services",
    path: "#",
    children: [
      { title: "home", path: "/" },
      { title: "Lumber and Building Materials", path: "#" },
      { title: "Structural Components/EWP", path: "#" },
      { title: "Insulation and Weatherproofing", path: "#" },
      { title: "James Hardie Siding", path: "#" },
      { title: "Hardware and Fasteners", path: "#" },
      { title: "Specialized Lumber Products", path: "#" },
      { title: "404 Page", path: "/404" },
    ],
  },
  {
    title: "Alaska",
    path: "/pricing",
  },
  {
    title: "Pacific Northwest",
    path: "/about",
  },
  {
    title: "Locations",
    path: "/blog",
  },
  {
    title: "Contact",
    path: "/contact",
  },
 
];
---

<Container>
  <header class="flex flex-col lg:flex-row justify-between items-center my-5">
    <Astronav>
      <div class="flex w-full lg:w-auto items-center justify-between">
        <a href="/" class="text-lg"
          ><span class="">
            <Picture
            src={UcmLogoSm}
            alt="Ucm logo"
            sizes="(max-width: 200px) 50vw, 200px"
            loading="eager"
            format="avif"
            
          />
            </span>
        </a>
        <div class="block lg:hidden">
          <MenuIcon class="w-4 h-4 text-gray-800" />
        </div>
      </div>
      <MenuItems class="hidden w-full lg:w-auto mt-2 lg:flex lg:mt-0">
        <ul class="flex flex-col lg:flex-row lg:gap-3">
          {
            menuitems.map((item, index) => (
              <>
                {item.children && (
                  <Dropdown
                    title={item.title}
                    children={item.children}
                    lastItem={index === menuitems.length - 1}
                  />
                )}

                {!item.children && (
                  <li>
                    <a
                      href={item.path}
                      class="flex lg:px-3 py-2 items-center text-gray-600 hover:text-gray-900">
                      <span> {item.title}</span>
                      {item.badge && (
                        <span class="ml-1 px-2 py-0.5 text-[10px] animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                      )}
                    </a>
                  </li>
                )}
              </>
            ))
          }
        </ul>

      </MenuItems>
    </Astronav>
  </header>
</Container>
